#! /usr/bin/env node

const path = require("path");
const fs = require("fs");
const Cleanscript = require("../index.js");

const args = process.argv.splice(2);

let target;
let prettify = false;
let watch = false;
let minify = true;
let mangle = true;
args.forEach((arg, i) => {
  if (!arg.startsWith("--")) target = arg;
  else if (arg === "--watch") watch = true;
  else if (arg === "--no-minify") minify = false;
  else if (arg === "--prettify") prettify = true;
  else if (arg === "--no-mangle") mangle = false;
});

if (!path.isAbsolute(target)) target = path.resolve(target);

Cleanscript.compile(target, { prettify, minify, mangle });
if (watch) Cleanscript.watch(target, { prettify, minify, mangle });
